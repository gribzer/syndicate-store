{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
      "singularName": "product",
      "pluralName": "products",
      "displayName": "Product"
    },
    "options": {
      "draftAndPublish": true
    },
    "attributes": {
      "title": {
        "type": "string",
        "required": true
      },
      "slug": {
        "type": "uid",
        "targetField": "title"
      },
      "description": {
        "type": "richtext"
      },
      "price": {
        "type": "decimal",
        "required": true
      },
      "currency": {
        "type": "string",
        "default": "USD"
      },
      "stock": {
        "type": "integer",
        "default": 0
      },
      "image": {
        "type": "media",
        "multiple": false,
        "required": false
      }
    }
  }
  